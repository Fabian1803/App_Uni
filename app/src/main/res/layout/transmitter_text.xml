<?xml version="1.0" encoding="utf-8"?> <!--trasmitter_text.xml-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="90dp"
    android:orientation="vertical"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_nom_chat_i"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Tu"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/text_date_chat_i"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text=", 0:00 pm" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2175F3"
        android:background="@drawable/border_circle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_chat_gn_i"
            android:padding="8dp"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="contenido del mensaje" />
    </LinearLayout>
</LinearLayout>