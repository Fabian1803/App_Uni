<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/splash">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.appuni.ui.home.HomeFragment"
        android:label="@string/menu_cursos"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_chat"
        android:name="com.example.appuni.ui.chat.ChatFragment"
        android:label="@string/menu_chat"
        tools:layout="@layout/fragment_chat" />


    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.appuni.ui.gallery.GalleryFragment"
        android:label="@string/menu_calendario"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.appuni.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_ayuda"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.appuni.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/splash"
        android:name="com.example.appuni.ui.SplashScreen.Splash"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" />

    <fragment
        android:id="@+id/searchUserFragment"
        android:name="com.example.appuni.ui.chat.search_user"
        android:label="Buscar Usuario"
        tools:layout="@layout/fragment_search_user" />
    <fragment
        android:id="@+id/chatPanel"
        android:name="com.example.appuni.ui.chat.ChatPanel"
        android:label="fragment_chat_panel"
        tools:layout="@layout/fragment_chat_panel" />
    <fragment
        android:id="@+id/coursePanel"
        android:name="com.example.appuni.ui.home.CoursePanel"
        android:label="fragment_course_panel"
        tools:layout="@layout/fragment_course_panel" />
    <activity
        android:id="@+id/passwordRecovery"
        android:name="com.example.appuni.ui.login.PasswordRecovery"
        android:label="PasswordRecovery" />
    <activity
        android:id="@+id/codeVerify"
        android:name="com.example.appuni.ui.login.CodeVerify"
        android:label="CodeVerify" />

