<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/borde_spinner"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppUni"
        tools:targetApi="31">
        <activity
            android:name=".ui.login.CodeVerify"
            android:exported="false"
            android:label="@string/title_activity_code_verify"
            android:theme="@style/Theme.AppUni" />
        <activity
            android:name=".ui.login.PasswordRecovery"
            android:exported="false"
            android:label="@string/title_activity_password_recovery"
            android:theme="@style/Theme.AppUni" />
        <activity
            android:name=".ui.home.CourseFragment"
            android:exported="false"
            android:label="@string/title_activity_course_fragment"
            android:theme="@style/Theme.AppUni" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppUni.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>